{
  "manifest_version": 3,
  "name": "GitHub URL转换器",
  "version": "1.0.1",
  "description": "快速在GitHub、CodeWiki和GitHub1s之间切换，支持键盘快捷键，提升开发效率",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["tabs"],
  "host_permissions": [
    "*://github.com/*",
    "*://github1s.com/*",
    "*://codewiki.google/*"
  ],
  "commands": {
    "convert-to-codewiki": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "切换到CodeWiki"
    },
    "convert-to-github1s": {
      "suggested_key": {
        "default": "Alt+Shift+1",
        "mac": "Alt+Shift+1"
      },
      "description": "切换到GitHub1s"
    },
    "convert-to-github": {
      "suggested_key": {
        "default": "Alt+Shift+G",
        "mac": "Alt+Shift+G"
      },
      "description": "返回GitHub"
    }
  }
}